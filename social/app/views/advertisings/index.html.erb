<p id="notice"><%= notice %></p>

<div class="container">
 <h1>Advertisings</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Img</th>
        <th>Header</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @advertisings.each do |advertising| %>
        <tr>
          <td><%= advertising.img %></td>
          <td><%= advertising.header %></td>
          <td><%= advertising.content %></td>
          <td><%= link_to 'Show', advertising %></td>
          <td><%= link_to 'Edit', edit_advertising_path(advertising) %></td>
          <td><%= link_to 'Destroy', advertising, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Advertising', new_advertising_path, class: "btn btn-primary" %>
</div>

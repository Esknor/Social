<p id="notice"><%= notice %></p>

<div class="container">

<div class="col-sm-offset-2 col-sm-8">
  <h1>Listing Users</h1>
  <div class='table'>
    <table class='table'>
      <thead>
        <tr>
          <th width="30%"><h2>Email</h2></th>
          <th width="30%"><h2>Permission</h2></th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td width="30%"><%= user.email %></td>
            <td width="30%">
              <% if user.userinfo.permission.nil? %>
                none
              <% else %>
                <%= user.userinfo.permission %>
              <% end %>
            </td>
            <% if current_user != user %>
              <%= form_tag edit_userinfo_path(user), method: "patch" do %>
                <%= hidden_field_tag('userinfo_id', user.id) %>
              <% end %>
            <% else %>
              <td colspan="2"></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>

<!DOCTYPE html>
<html>
<head>
  <title><%= "Social" %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-static-top">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "MyPage", {:controller => 'welcome', :action => 'index'}, class: 'navbar-brand' %>
    </div>
    <div>
      <ul class="nav navbar-nav">
        <li><%= link_to "Users", {:controller => 'userinfos', :action => 'index'} %></li>
        <li><%= link_to "Groups", {:controller => 'groups', :action => 'index'} %></li>
        <% if signed_in? %>
          <li><%= link_to "VideoChat", {:controller => 'rooms', :action => 'index'} %></li>
        <% end %>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if signed_in? %>
          <% if is_admin? %>
            <li><%= link_to "Permissions", {:controller => 'users', :action => 'index'} %></li>
            <li><%= link_to "Advertisings", {:controller => 'advertisings', :action => 'index'} %></li>
          <% end %>
        <% end %>
        <% if signed_in? %>
          <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
        <% else %>
          <li><%= link_to "Sign in", signin_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
